# Environment Configuration for Data Integration Platform

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=True
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///data_integration.db

# API Configuration
SOURCE_API_URL=http://localhost:5000/api/sources
DESTINATION_API_URL=http://localhost:5000/api/destinations

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,json,xlsx,xml

# Rate Limiting
RATELIMIT_DEFAULT=1000 per hour

# Security Headers
SECURITY_HEADERS=True

# CORS Settings
CORS_ORIGINS=*